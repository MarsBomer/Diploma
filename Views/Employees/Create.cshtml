@model Employee;
 
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-employee-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Добавление сотрудника</h1>
                                </div>
                                <form method="post">
                                    <div class="form-group">
                                        <label>E-mail</label>
                                        <input type="email" class="form-control form-control-user" name="email" aria-describedby="emailHelp">
                                    </div>
                                    <div class="form-group">
                                        <label>Имя</label>
                                        <input type="text" class="form-control form-control-user" name="firstName">
                                    </div>
                                    <div class="form-group">
                                        <label>Фамилия</label>
                                        <input type="text" class="form-control form-control-user" name="lastName">
                                    </div>     
                                    <div class="form-group">
                                        <label>Отчество</label>
                                        <input type="text" class="form-control form-control-user" name="patronimic">
                                    </div>  
                                    <div class="form-group">
                                        <label>Дата рождения</label>
                                        <input type="date" class="form-control form-control-user" name="birthDate">
                                    </div> 
                                    <hr class="sidebar-divider my-4">   
                                    <div class="form-group">
                                        <label>Должность</label>
                                        <input type="text" class="form-control form-control-user" name="position">
                                    </div>  
                                    <div class="form-group">
                                        <label>Дата начала работы</label>
                                        <input type="date" class="form-control form-control-user" name="startDate">
                                    </div> 
                                    <button type="submit" class="btn btn-primary btn-block">
                                        Сохранить
                                    </button>                                          
                                </form>                                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
